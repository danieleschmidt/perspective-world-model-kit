# Perspective World Model Kit (PWMK) Environment Configuration
# Copy this file to .env and configure for your environment

# ==========================================
# Core Configuration
# ==========================================

# Development mode (true/false)
PWMK_DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
PWMK_LOG_LEVEL=INFO

# Data directory for datasets and models
PWMK_DATA_DIR=./data

# Model checkpoint directory
PWMK_MODEL_DIR=./models

# Experiment results directory
PWMK_RESULTS_DIR=./results

# ==========================================
# Computation Configuration
# ==========================================

# Device selection (auto, cpu, cuda, mps)
PWMK_DEVICE=auto

# Number of CPU cores for parallel processing
PWMK_NUM_WORKERS=4

# Memory limit for data loading (in GB)
PWMK_MEMORY_LIMIT=8

# Batch size for training (adjust based on GPU memory)
PWMK_BATCH_SIZE=32

# ==========================================
# Database Configuration
# ==========================================

# Belief store backend (prolog, clingo, souffle)
PWMK_BELIEF_BACKEND=prolog

# Database URL for experiment tracking
DATABASE_URL=sqlite:///pwmk_experiments.db

# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379/0

# ==========================================
# Monitoring & Observability
# ==========================================

# Weights & Biases configuration
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=pwmk-experiments
WANDB_ENTITY=your_wandb_entity

# TensorBoard logging directory
TENSORBOARD_LOG_DIR=./logs/tensorboard

# Prometheus metrics endpoint
PROMETHEUS_ENDPOINT=http://localhost:9090

# Enable performance profiling (true/false)
PWMK_ENABLE_PROFILING=false

# ==========================================
# Unity ML-Agents Configuration
# ==========================================

# Unity environment directory
UNITY_ENV_DIR=./unity_envs

# Unity build platform (linux, osx, windows)
UNITY_PLATFORM=linux

# Unity environment worker ID
UNITY_WORKER_ID=0

# Unity no graphics mode (true/false)
UNITY_NO_GRAPHICS=true

# Unity timeout (seconds)
UNITY_TIMEOUT=60

# ==========================================
# Security Configuration
# ==========================================

# API keys and secrets (keep these secure!)
API_SECRET_KEY=your_secret_key_here

# JWT signing key for authentication
JWT_SECRET_KEY=your_jwt_secret_here

# Encryption key for sensitive data
ENCRYPTION_KEY=your_encryption_key_here

# ==========================================
# External Services
# ==========================================

# OpenAI API configuration (if using GPT models)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Hugging Face Hub token
HUGGINGFACE_HUB_TOKEN=your_huggingface_token_here

# AWS configuration (for S3 storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-west-2
AWS_S3_BUCKET=your-pwmk-bucket

# Google Cloud configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
GCP_PROJECT_ID=your-gcp-project-id

# ==========================================
# Development & Testing
# ==========================================

# Test database URL (separate from production)
TEST_DATABASE_URL=sqlite:///test_pwmk.db

# Test data directory
TEST_DATA_DIR=./test_data

# Enable slow tests (true/false)
ENABLE_SLOW_TESTS=false

# Enable GPU tests (true/false)
ENABLE_GPU_TESTS=false

# Enable integration tests (true/false)
ENABLE_INTEGRATION_TESTS=true

# Mock external services in tests (true/false)
MOCK_EXTERNAL_SERVICES=true

# ==========================================
# Environment-Specific Overrides
# ==========================================

# Development environment
# Uncomment and modify for development
# PWMK_DEBUG=true
# PWMK_LOG_LEVEL=DEBUG
# ENABLE_SLOW_TESTS=true

# Production environment
# Uncomment and modify for production
# PWMK_DEBUG=false
# PWMK_LOG_LEVEL=WARNING
# PWMK_ENABLE_PROFILING=true

# CI/CD environment
# Uncomment and modify for CI/CD
# PWMK_DEVICE=cpu
# MOCK_EXTERNAL_SERVICES=true
# ENABLE_GPU_TESTS=false

# ==========================================
# Custom Configuration
# ==========================================

# Add your custom environment variables here
# CUSTOM_VARIABLE=value

# ==========================================
# Important Notes
# ==========================================
#
# 1. Never commit the actual .env file to version control
# 2. Keep API keys and secrets secure
# 3. Use strong encryption keys in production
# 4. Rotate secrets regularly
# 5. Use environment-specific configurations
# 6. Document any custom variables you add